<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="12dp"
    android:id="@+id/card_wisata"
    card_view:cardBackgroundColor="#FFFF"
    card_view:cardCornerRadius="3dp"
    card_view:contentPadding="10dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    app:layout_constraintTop_toBottomOf="@id/cardView">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_item_photo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:src="@drawable/baraden"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/namaWisata"
                android:layout_width="181dp"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:text="@string/wisata_name"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:text="@string/wisata_rating"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="end|center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/kategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="6dp"
            android:text="@string/wisata_category"
            android:textSize="14sp"
            android:textStyle="normal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/detailWisata"
                android:layout_width="160dp"
                android:layout_height="54dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="58dp"
                android:layout_marginBottom="12dp"
                android:gravity="start|top|center_vertical"
                android:textSize="14sp"
                android:text="@string/wisata_description" />

            <TextView
                android:id="@+id/tarif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="58dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="14dp"
                android:text="@string/wisata_tarif"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="end|center_vertical"/>


        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
