<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="12dp"
    android:id="@+id/card_wisata"
    card_view:cardCornerRadius="8dp"
    card_view:contentPadding="10dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    app:layout_constraintTop_toBottomOf="@id/cardView">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_item_photo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:src="@drawable/baraden"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="-18dp"
        android:layout_marginTop="-8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/namaWisata"
                android:layout_width="181dp"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:text="@string/wisata_name"
                android:fontFamily="@font/nunito_font_family"
                android:textFontWeight="700"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/ratingWisata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="12dp"
                android:text="@string/wisata_rating"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_font_family"
                android:textFontWeight="700"
                android:gravity="end|center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:layout_marginTop="9dp"
            android:layout_marginStart="207dp"
            android:src="@drawable/ic_star"
            android:gravity="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/kategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="6dp"
            android:text="@string/wisata_category"
            android:fontFamily="@font/nunito_font_family"
            android:textFontWeight="600"
            android:textSize="14sp"
            android:textStyle="normal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/detailWisata"
                android:layout_width="130dp"
                android:layout_height="42dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="58dp"
                android:layout_marginBottom="12dp"
                android:paddingEnd="0dp"
                android:gravity="start|top|center_vertical"
                android:fontFamily="@font/nunito_font_family"
                android:textFontWeight="400"
                android:textSize="12sp"
                android:text="@string/wisata_description" />

            <TextView
                android:id="@+id/jamWisata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="58dp"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="0dp"
                android:text="@string/wisata_jam"
                android:textSize="11sp"
                android:fontFamily="@font/nunito_font_family"
                android:textFontWeight="700"
                android:gravity="end|center_vertical"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tarifWisata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="0dp"
                android:text="@string/wisata_tarif"
                android:textSize="11sp"
                android:fontFamily="@font/nunito_font_family"
                android:textFontWeight="700"
                app:layout_constraintTop_toBottomOf="@+id/wisata_jam"
                android:gravity="end|center_vertical"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
