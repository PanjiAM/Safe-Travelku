<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ScrollingDetailActivity"
    tools:showIn="@layout/activity_scrolling_detail">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/item_judul2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="null"
            android:textSize="22sp"
            android:fontFamily="@font/nunito_font_family"
            android:textFontWeight="800"
            android:padding="5dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/item_kategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="null"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_font_family"
            android:textFontWeight="600"
            android:paddingLeft="5dp"
            android:paddingTop="12dp"/>
        <TextView
            android:id="@+id/item_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="null"
            android:textSize="16sp"
            android:gravity="end"
            android:fontFamily="@font/nunito_font_family"
            android:textFontWeight="600"
            android:paddingLeft="5dp"
            android:paddingTop="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/item_jam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="null"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_font_family"
            android:textFontWeight="600"
            android:paddingLeft="5dp"
            android:paddingTop="12dp"/>
        <TextView
            android:id="@+id/item_tarif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="null"
            android:textSize="16sp"
            android:gravity="end"
            android:fontFamily="@font/nunito_font_family"
            android:textFontWeight="600"
            android:paddingLeft="5dp"
            android:paddingTop="12dp"/>

    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingTop="32dp"
            android:paddingRight="5dp">

        <TextView
            android:id="@+id/item_deskripsi_wisata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="null"
            android:fontFamily="@font/nunito_font_family"
            android:textFontWeight="400"
            android:padding="5dp"/>
    </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>